var platWidth = Ti.Platform.displayCaps.platformWidth;
var platHeight = Ti.Platform.displayCaps.platformHeight;


mainWindow = Ti.UI.createWindow({
	title: "Picture Gallery",
	backgroundColor: "fff"
});

mainContainer = Ti.UI.createView({
	backgroundColor: "1f1789",
	top: 20
	
});

mainButton = Ti.UI.createLabel({
	width: 120,
	height: 30,
	color: "1f1789",
	backgroundColor: "fff",
	text: "Open Gallery"
});

mainContainer.add(mainButton);

mainWindow.add(mainContainer);

mainWindow.open();

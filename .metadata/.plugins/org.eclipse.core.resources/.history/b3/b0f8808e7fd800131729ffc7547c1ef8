Ti.UI.setBackgroundColor("#000");

var mainScreen = Ti.UI.createWindow({
	backgroundColor : "blue"
});

var labelView = Ti.UI.createView({
    backgroundColor : "#fff",
    height : 60,
    left : 20,
    right : 20,
    top : 80,
    zindex : 0
	
});

var previousView = Ti.UI.createView({
	backgroundColor : "#fff",
	borderRadius : 3,
	top : labelView.top + labelView.height + 20,
	botton :20,
	left : 20,
	right : 200,
	widht : 20,
	height : 35,
	zindex : 1
	
});

var nextView = Ti.UI.createView({
	backgroundColor : "#fff",
	borderRadius : 3,
	top : labelView.top + labelView.height + 20,
	botton :20,
	left : 200,
	right : 20,
	widht : 20,
	height : 35,
	zindex : 2
	
});

var previousLabel = Ti.UI.createLabel({
	text : "Previous"
});

var nextLabel = Ti.UI.createLabel({
	text : "Next"
});

previousView.add(previousLabel);
nextView.add(nextLabel);
mainScreen.add(labelView, previousView, nextView);
mainScreen.open();


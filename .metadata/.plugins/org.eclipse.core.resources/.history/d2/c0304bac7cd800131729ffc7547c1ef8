Ti.UI.setBackgroundColor("#000");

var mainScreen = Ti.UI.createWindow({
	backgroundColor : "blue"
});

var labelView = Ti.UI.createView({
    backgroundColor : "#fff",
    height : 60,
    left : 20,
    right : 20,
    top : 40
	
});

var nextView = Ti.UI.createView({
	backgroundColor : "#fff",
	botton :20,
	right : 20,
	widht : 20,
	height : 20
	
});



mainScreen.add(nextView);
mainScreen.open();

